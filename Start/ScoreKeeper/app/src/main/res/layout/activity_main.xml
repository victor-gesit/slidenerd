<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.scorekeeper.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp">

            <LinearLayout
                android:id="@+id/linear_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:layout_marginRight="8dp"
                            android:layout_toLeftOf="@id/chelsea_image"
                            android:text="Chelsea"
                            android:textColor="#616161"
                            android:fontFamily="san-serif-medium"
                            android:textSize="14sp"/>
                        <ImageView
                            android:id="@+id/chelsea_image"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/chelsea2"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/team_a_score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_margin="12dp"
                            android:text="0"
                            android:textSize="56sp"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-light"
                            android:padding="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Yellow cards"
                            android:textSize="16sp"
                            android:textColor="#000"/>
                        <TextView
                            android:id="@+id/team_a_yellow_cards"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-light"
                            android:padding="4dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Red cards"
                            android:textSize="16sp"
                            android:textColor="#000"/>
                        <TextView
                            android:id="@+id/team_a_red_cards"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-light"
                            android:padding="4dp"/>

                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="Goal"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:onClick="goalForTeamA"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yellow card"
                        android:layout_margin="8dp"
                        android:onClick="yellowCardForTeamA"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Red card"
                        android:layout_margin="8dp"
                        android:onClick="redCardForTeamA"
                        android:background="#F00"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray">

                </View>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/manu_image"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/manu"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@id/manu_image"
                            android:gravity="center"
                            android:layout_marginLeft="8dp"
                            android:textColor="#616161"
                            android:fontFamily="san-serif-medium"
                            android:text="Manchester"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/team_b_score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_margin="12dp"
                            android:text="0"
                            android:textSize="56sp"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-light"
                            android:padding="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Yellow cards"
                            android:textSize="16sp"
                            android:textColor="#000"/>
                        <TextView
                            android:id="@+id/team_b_yellow_cards"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-light"
                            android:padding="4dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Red cards"
                            android:textSize="16sp"
                            android:textColor="#000"/>
                        <TextView
                            android:id="@+id/team_b_red_cards"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-light"
                            android:padding="4dp"/>

                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="Goal"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:onClick="goalForTeamB"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yellow card"
                        android:layout_margin="8dp"
                        android:onClick="yellowCardForTeamB"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Red card"
                        android:layout_margin="8dp"
                        android:onClick="redCardForTeamB"
                        android:background="#F00"/>
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginBottom="16dp"
            android:onClick="reset"
            android:layout_gravity="center"
            />
    </LinearLayout>

</ScrollView>

