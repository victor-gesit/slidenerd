<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.iwashlaundry.MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/shop"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="iWash Laundry Shop"
            android:layout_marginLeft="16dp"
            android:textColor="@android:color/black"
            android:textSize="34sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/point"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="117C Wetheral Road, Owerri"
                android:layout_marginLeft="24dp"
                android:textAppearance="?android:textAppearanceMedium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/phone"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="+234 706 974 9945"
                android:layout_marginLeft="24dp"
                android:textAppearance="?android:textAppearanceMedium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/hours"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mon - Sat: 8am - 6pm\nSundays: Closed"
                android:layout_marginLeft="24dp"
                android:textAppearance="?android:textAppearanceMedium"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About us:"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="iWash is a tech driven laundry company with automated laundry machines. We give you high quality service. You wear, we wash."
            android:textAppearance="?android:textAppearanceMedium"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/wash"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/washing"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_below="@id/wash"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:text="Wash"
                    android:textSize="20sp"
                    android:textAlignment="center"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iron"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/iron"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_below="@id/iron"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:text="Iron"
                    android:textSize="20sp"
                    android:textAlignment="center"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/pack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/hanger"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_below="@id/pack"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:text="Package"
                    android:textSize="20sp"
                    android:textAlignment="center"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
</ScrollView>